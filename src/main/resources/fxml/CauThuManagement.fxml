<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox minHeight="800" spacing="25" styleClass="page-container" stylesheets="@../styles/common.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="org.football.controllers.CauThuController">
    <padding>
        <Insets bottom="20" left="25" right="25" top="20" />
    </padding>
    
    <!-- HEADER -->
    <HBox alignment="CENTER_LEFT" spacing="15">
        <StackPane prefHeight="50" prefWidth="50" style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #66bb6a 0%, #81c784 100%); -fx-background-radius: 25; -fx-effect: dropshadow(gaussian, rgba(102,187,106,0.4), 10, 0.4, 0, 3);">
            <Label style="-fx-font-size: 28px;" text="⚽" />
        </StackPane>
        
        <VBox spacing="3">
            <Label style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #333;" text="QUẢN LÝ CẦU THỦ" />
            <Label style="-fx-font-size: 13px; -fx-text-fill: #999;" text="Thêm, sửa, xóa và tìm kiếm cầu thủ" />
        </VBox>
        
        <Region HBox.hgrow="ALWAYS" />
        
        <StackPane onMouseClicked="#handleLamMoi" prefHeight="45" prefWidth="45" style="-fx-background-color: #80cbc4; -fx-background-radius: 22.5; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(128,203,196,0.4), 10, 0.4, 0, 3);">
            <Label style="-fx-font-size: 20px; -fx-text-fill: white;" text="🔄" />
        </StackPane>
    </HBox>
    
    <!-- FORM SECTION -->
    <VBox spacing="20" styleClass="card">
        <Label styleClass="section-title" text="📝 Thông tin cầu thủ" />
        
        <GridPane hgap="20" vgap="15">
            <columnConstraints>
                <ColumnConstraints percentWidth="25" />
                <ColumnConstraints percentWidth="25" />
                <ColumnConstraints percentWidth="25" />
                <ColumnConstraints percentWidth="25" />
            </columnConstraints>
            
            <VBox spacing="8" GridPane.columnIndex="0">
                <Label style="-fx-font-size: 13px; -fx-font-weight: 500; -fx-text-fill: #666;" text="Mã cầu thủ *" />
                <TextField fx:id="txtMaCT" promptText="Nhập mã (VD: CT01)" style="-fx-font-size: 13px; -fx-padding: 10;" />
            </VBox>
            
            <VBox spacing="8" GridPane.columnIndex="1">
                <Label style="-fx-font-size: 13px; -fx-font-weight: 500; -fx-text-fill: #666;" text="Họ tên *" />
                <TextField fx:id="txtHoTen" promptText="Nhập họ tên" style="-fx-font-size: 13px; -fx-padding: 10;" />
            </VBox>
            
            <VBox spacing="8" GridPane.columnIndex="2">
                <Label style="-fx-font-size: 13px; -fx-font-weight: 500; -fx-text-fill: #666;" text="Vị trí *" />
                <ComboBox fx:id="cbViTri" prefWidth="1000" promptText="Chọn vị trí" style="-fx-font-size: 13px;" />
            </VBox>
            
            <VBox spacing="8" GridPane.columnIndex="3">
                <Label style="-fx-font-size: 13px; -fx-font-weight: 500; -fx-text-fill: #666;" text="Đội bóng *" />
                <ComboBox fx:id="cbDoiBong" prefWidth="1000" promptText="Chọn đội" style="-fx-font-size: 13px;" />
            </VBox>
         <rowConstraints>
            <RowConstraints />
         </rowConstraints>
        </GridPane>
        
        <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 10 0 0 0;">
            <Button fx:id="btnThem" styleClass="btn-success" minWidth="120" onAction="#handleThem" text="➕ Thêm" />
            <Button fx:id="btnSua" styleClass="btn-warning" minWidth="120" onAction="#handleSua" text="✏ Sửa" />
            <Button fx:id="btnXoa" styleClass="btn-danger" minWidth="120" onAction="#handleXoa" text="🗑 Xóa" />
            <Button fx:id="btnLamMoi" styleClass="btn-info" minWidth="120" onAction="#handleLamMoi" text="🔄 Làm mới" />
            
            <Region HBox.hgrow="ALWAYS" />
            
            <TextField fx:id="txtTimKiem" promptText="🔍 Tìm kiếm theo tên..." style="-fx-min-width: 250px;" />
            <Button styleClass="btn-primary" onAction="#handleTimKiem" text="🔍 Tìm" />
        </HBox>
    </VBox>
    
    <!-- TABLE SECTION -->
    <VBox spacing="15" styleClass="card" VBox.vgrow="ALWAYS">
        <HBox alignment="CENTER_LEFT" spacing="20">
            <Label styleClass="section-title" text="📋 Danh sách cầu thủ" />
            
            <Region HBox.hgrow="ALWAYS" />
            
            <Label style="-fx-font-size: 13px; -fx-text-fill: #666;" text="🗄Hiển thị:" />
            <RadioButton fx:id="rbAll" selected="true" style="-fx-font-size: 12px;" text="Tất cả">
                <toggleGroup>
                    <ToggleGroup fx:id="filterGroup" />
                </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="rbCLB1" style="-fx-font-size: 12px;" text="CLB1 (DB1)" toggleGroup="$filterGroup" />
            <RadioButton fx:id="rbCLB2" style="-fx-font-size: 12px;" text="CLB2 (DB2)" toggleGroup="$filterGroup" />
        </HBox>
        
        <TableView fx:id="tableCauThu" prefHeight="600" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colMaCT" prefWidth="80" text="Mã CT" />
                <TableColumn fx:id="colHoTen" prefWidth="200" text="Họ tên" />
                <TableColumn fx:id="colViTri" prefWidth="120" text="Vị trí" />
                <TableColumn fx:id="colMaDB" prefWidth="100" text="Mã đội" />
                <TableColumn fx:id="colTenDB" prefWidth="180" text="Tên đội" />
                <TableColumn fx:id="colCLB" prefWidth="80" text="CLB" />
                <TableColumn fx:id="colManh" prefWidth="100" text="Mảnh DB" />
            </columns>
        </TableView>
        
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10 0 0 0;">
            <Label fx:id="lblTongSo" style="-fx-font-size: 13px; -fx-text-fill: #666;" text="📊 Tổng: 0 cầu thủ" />
            <Label style="-fx-text-fill: #ddd;" text="•" />
            <Label fx:id="lblDB1" style="-fx-font-size: 13px; -fx-text-fill: #80cbc4;" text="DB1: 0 cầu thủ" />
            <Label style="-fx-text-fill: #ddd;" text="•" />
            <Label fx:id="lblDB2" style="-fx-font-size: 13px; -fx-text-fill: #81c784;" text="DB2: 0 cầu thủ" />
        </HBox>
    </VBox>
    
</VBox>
